@using OBiletHelper.Model.Response;
@model BusJourneysResponse

@{
    ViewBag.Title = "GetBusJourney";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    int counter = 0;
    foreach (var item in Model.Data?.Take(6))
    {

        <div class="container col-md-4"  style="background-color:whitesmoke;">

            @if (counter == 0)
            {
                <div class="row" style="background-color:blue">
                    <label style="color:white;text-align:center">
                        @item.OriginLocation - @item.DestinationLocation
                        <p></p>
                        @item.Journey.Departure.Date.ToString("dd MMMM dddd")
                    </label>

                </div>
            }
            <div class="border-2">
                <div class="row" style="margin-top:5%;">
                    <div class="row">
                        <div class=" col-md-4">
                            <label>Kalkış</label>
                            <p></p>
                            <label>@item.Journey.Departure.TimeOfDay</label>
                        </div>

                        <div class=" col-md-4">
                            <label>Varış</label>
                            <p></p>
                            <label>@item.Journey.Arrival.TimeOfDay</label>
                        </div>
                        <div class=" col-md-4">
                            <input type="button" class="rounded border" style="background-color:red; color:white; border-block:none; margin-top:15%; float:right;" value="@item.Journey.OriginalPrice @item.Journey.Currency" />
                        </div>
                    </div>
                    <div class=" col-md-12" style="margin-top:1%;">
                        <label>@item.Journey.Origin - @item.Journey.Destination</label>
                    </div>
                </div>
            </div>
        </div>
        counter++;

    }
}
